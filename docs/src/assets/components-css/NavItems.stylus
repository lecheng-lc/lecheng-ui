@import '~@@/style/var.styl'
.lc-nav
  &__group
    &--title
      font-size 16px
      color: #455a64
      line-height: 24px
      font-weight 700
      padding: 10px 0 0 40px
      @media (min-width 1440px)
          padding: 10px 20px 10px 40px
  &__item
    font-size 12px
    color: #455a64
    padding: 10px 0 0 40px
    line-height: 24px
    cursor pointer
    @media (min-width 1440px)
      font-size 14px
      padding: 10px 20px 10px 40px
  &__active
    color link-color